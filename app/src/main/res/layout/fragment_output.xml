<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    tools:context=".output">

    <!--  make textview to show user input  -->
    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:text="This is your information"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="25sp" />

    <!--  show the user input from input page  -->
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="Name:"
        android:inputType="textPersonName"
        android:layout_below="@id/show"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/isiname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="Name"
        android:inputType="textPersonName"
        android:layout_below="@id/name"
        android:layout_marginBottom="30dp"
        android:textSize="20dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="Age:"
        android:inputType="number"
        android:layout_below="@+id/isiname"
        android:textSize="20dp"
        android:textFontWeight="500"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp" />

    <TextView
        android:id="@+id/isiage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="Age"
        android:inputType="number"
        android:layout_below="@+id/age"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="Email:"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/isiage"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:layout_marginVertical="10dp" />

    <TextView
        android:id="@+id/isiemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="Email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/email"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp" />

</RelativeLayout>